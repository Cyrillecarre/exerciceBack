{% extends 'base.html.twig' %}

{% block title %}Hello ConnexionController!{% endblock %}

{% block body %}
<h1>Enregistrement</h1>

<form action="{{ path('app_register') }}" method="post">
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_label(form.email, "Email") }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password, "Mot de passe") }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(form.role, "RÃ´le") }}
        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
    </div>

    {% for role in roles %}
        {% if role.nom == form.role.vars.value %}
            {% include 'enregistrement_' ~ role.nom ~ '.html.twig' %}
        {% endif %}
    {% endfor %}

    <button type="submit" class="btn btn-primary">Envoyer</button>

    {{ form_end(form) }}
</form>

{% endblock %}
